{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ES2022",
    "moduleResolution": "Node",
    "moduleDetection": "force",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": false,
    "skipLibCheck": true,
    "lib": ["ES2021"],
    "types": ["node"]
  },
  "include": ["."],
  "exclude": ["node_modules"]
}
